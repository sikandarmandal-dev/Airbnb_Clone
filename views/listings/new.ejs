<% layout("./layouts/boilerplate") %>

<body>
    <div class="row">
        <br /><br />
        <div class="col-8 offset-2">
            <h3>Create a New Listing</h3>
            <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title:</label>
                    <input name="listing[title]" placeholder="Enter best title" type="text" class="form-control"
                        required />
                    <div class="valid-feedback">Title looks like correct!</div>
                    <div class="invalid-feedback">Please enter Title</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description:</label>
                    <textarea name="listing[description]" placeholder="Enter description" class="form-control"
                        required></textarea>
                    <div class="invalid-feedback">Please enter description</div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Upload Listing images</label>
                    <input name="listing[image]" type="file" class="form-control" />
                    required
                </div>
                <div class="row">
                    <div class="mb-3 col-md-5">
                        <label for="price" class="form-label">Price:</label>
                        <input name="listing[price]" placeholder="1200" class="form-control" required />
                        <div class="invalid-feedback">Please enter a valid amount!</div>
                    </div>
                    <div class="mb-3 col-md-7">
                        <label for="country" class="form-label">Country:</label>
                        <input name="listing[country]" placeholder="India" type="text" class="form-control" required />
                        <div class="invalid-feedback">Please enter country name</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location:</label>
                    <input name="listing[location]" placeholder="Deoghar, jharkhand" type="text" class="form-control"
                        required />
                    <div class="invalid-feedback">Please enter your location</div>
                </div>
                <br>
                <button class="btn btn-dark">Add</button>
                <br /><br /><br>
            </form>
        </div>
    </div>
</body>